<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <ImageView
        android:id="@+id/notification_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/icon_food"
        android:foregroundGravity="center"
        />


    <TextView
        android:id="@+id/notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/notification_icon"
        android:layout_alignTop="@id/notification_icon"
        android:text="TextView"
        android:textSize="14sp"
        android:textColor="@color/tw__composer_black"
        android:textStyle="bold"
        />


    <TextView
        android:id="@+id/notification_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notification_title"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/notification_icon"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="12sp"
        android:text="This is a long notification description in which would be nice to have multiple lines"
        />


    <TextView
        android:id="@+id/notification_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/notification_title"
        android:layout_alignParentEnd="true"
        android:text="TextView"
        android:textSize="10sp" />


</RelativeLayout>