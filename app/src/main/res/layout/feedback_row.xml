<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:layout_margin="15dp"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/fondo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:srcCompat="@color/colorPrimary" />


            <TextView
                android:id="@+id/topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TÃº estado"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"

                android:layout_alignLeft="@id/fondo"
                android:layout_alignRight="@id/fondo"
                android:layout_alignTop="@id/fondo"
                android:layout_alignBottom="@id/fondo"
                android:gravity="center"


                />

            <!--
            <View
                android:id="@+id/separator"
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_below="@id/topic"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="15dp"
                />
            -->



                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fondo"
                    android:layout_margin="10dp"
                    >

                    <RadioButton
                        android:id="@+id/radioButtonSad"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/feedback_sad_pressable"
                        android:button="@android:color/transparent"
                        app:layout_constraintBottom_toBottomOf="parent"


                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toStartOf="@+id/radioButtonNeut"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RadioButton
                        android:id="@+id/radioButtonSmile"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/feedback_smile_pressable"
                        android:button="@android:color/transparent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/radioButtonNeut"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RadioButton
                        android:id="@+id/radioButtonNeut"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/feedback_neut_pressable"
                        android:button="@android:color/transparent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toStartOf="@+id/radioButtonSmile"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/radioButtonSad"
                        app:layout_constraintTop_toTopOf="parent" />


                </android.support.constraint.ConstraintLayout>




        </RelativeLayout>
    </android.support.v7.widget.CardView>

